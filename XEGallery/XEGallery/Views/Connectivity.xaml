<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XEGallery.Views.Connectivity">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the Connectivity Screen!"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="NetworkAccessLabel" Text="Network Access: " />
                    <Label x:Name="NetworkAccess" Text="{Binding NetworkAccess}" />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="NetworkProfilesLabel" Text="Network Profiles: " />
                    <Label x:Name="NetworkProfiles" Text="{Binding NetworkProfiles}" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>