<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XEGallery"
             x:Class="XEGallery.MainPage">

    <StackLayout>
        <Label Text="Welcome to XEGallery! (Xamarin.Essentials Gallery)" 
           HorizontalOptions="Center" />

        <StackLayout Orientation="Horizontal">
            <Button x:Name="Accelerometer" Text="Accelerometer" Command="{Binding AccelerometerCommand}"></Button>
            <Button x:Name="AppInfo" Text="App Info" Command="{Binding AppInfoCommand}"></Button>
            <Button x:Name="BatteryInfo" Text="Battery Info" Command="{Binding BatteryInfoCommand}"></Button>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button x:Name="Compass" Text="Compass" Command="{Binding CompassCommand}"></Button>
            <Button x:Name="Connectivity" Text="Connectivity" Command="{Binding ConnectivityCommand}"></Button>
            <Button x:Name="Maps" Text="Maps" Command="{Binding MapsCommand}"></Button>
        </StackLayout>
        
    </StackLayout>    

</ContentPage>
