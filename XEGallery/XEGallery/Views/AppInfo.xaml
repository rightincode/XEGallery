<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XEGallery.Views.AppInfo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the App Info Screen!"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="AppNameLabel" Text="Application Name: " />
                    <Label x:Name="AppName" Text="{Binding ApplicationName}" />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="BuildLabel" Text="Build: " />
                    <Label x:Name="Build" Text="{Binding Build}" />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="PackageNameLabel" Text="Package Name: " />
                    <Label x:Name="PackageName" Text="{Binding PackageName}" />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="VersionLabel" Text="Version: " />
                    <Label x:Name="Version" Text="{Binding Version}" />
                </StackLayout>
            </StackLayout>            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>